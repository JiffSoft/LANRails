<ul>
	<li><%= link_to 'Home', root_path %></li>
	<% if Party.current_party then %>
		<li><%= link_to 'Register', party_registrations_path(:party_id => Party.current_party.id) %></li>
                <% if Settings[:enable_tournaments].match(/(true|t|yes|y|1)$/i) != nil then %>
                <li><%= link_to 'Tournaments', party_tournaments_path(:party_id => Party.current_party.id) %></li>
                <% end %>
	<% end %>
    <% if Settings[:enable_forums].match(/(true|t|yes|y|1)$/i) != nil then %>
      <li><%= link_to 'Forums', forums_path %></li>
    <% end %>
	<li><%= link_to 'Staff', staff_path %></li>
	<li><%= link_to 'Sponsors', sponsors_path %></li>
	<% if User.current && User.current.loggedin? then %>
		<li><%= link_to 'My Profile', edit_account_path %></li>
	<% elsif not Party.current_party %>
		<li><%= link_to 'Register', new_account_path %></li>
	<% end %>
</ul>