<% if not User.current && User.current.loggedin? then %>
  <% form_tag(login_path, :class => 'login_form') do %>
    <b>Username:</b><br/><%= text_field nil, :username, :class => 'login_input login_username_box' %><br />
    <b>Password:</b><br/><%= password_field nil, :password, :class => 'login_input login_password_box' %><br />
    <div class="center" style="padding-top: 4px;">
      <%= submit_tag 'Login', :class => 'float_left login_button btn' %>
      <% end %>
      <%= button_to 'Register', new_account_path, :method => :get, :class => 'float_right register_button btn' %>
    </div>
    <div class="break center"><%= link_to 'Forgot your password?', forgot_password_path, :style => 'font-size: 8pt;' %></div>
<% else %>
  Welcome back<br/>
  <b><%= User.current.username %></b>!<br/>
  <%= link_to 'Profile', edit_account_path %>
  <%= link_to 'Logout', logout_path %><br />
<% end %>